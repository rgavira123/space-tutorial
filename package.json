{
  "name": "space-tutorial",
  "version": "1.0.0",
  "description": "Small demo app to showcase the simplicity of integrating SPACE",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:server\" \"pnpm:dev:client\" \"pnpm:dev:css\"",
    "dev:client": "vite",
    "dev:css": "tailwindcss -i ./src/static/css/app.css -o ./src/static/css/tailwind.css --watch",
    "dev:server": "tsx watch server/src/index.ts",
    "build": "tsc && tsc -p server/tsconfig.json && vite build",
    "start:server": "node server/dist/index.js",
    "lint": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Alejandro García Fernández",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alex-GF/space-demo.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alex-GF/space-demo/issues"
  },
  "homepage": "https://github.com/Alex-GF/space-demo#readme",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@iconify/react": "^5.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/prop-types": "^15.7.13",
    "@types/react-helmet": "^6.1.11",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "framer-motion": "^12.12.2",
    "helmet": "^8.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^5.3.0",
    "react-markdown": "^10.1.0",
    "react-svg": "^16.1.34",
    "remark-gfm": "^4.0.1",
    "tsc-alias": "1.8.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^24.6.2",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-node-polyfills": "^0.22.0"
  }
}